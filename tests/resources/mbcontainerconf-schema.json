{
    "$ref": "#/$defs/MBContainerConf",
    "$defs": {
        "MBContainerConf": {
            "title": "MBContainerConf",
            "type": "object",
            "properties": {
                "image": {
                    "type": "string"
                },
                "enable_ygg": {
                    "type": "boolean",
                    "default": true
                },
                "autostart": {
                    "type": "boolean",
                    "default": true
                },
                "require": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                },
                "mount": {
                    "$ref": "#/$defs/MBContainerMountConf"
                },
                "port": {
                    "type": "array",
                    "items": {
                        "type": "array"
                    },
                    "default": []
                },
                "environment": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    },
                    "default": {}
                },
                "metadata": {
                    "$ref": "#/$defs/MBContainerMetadataConf"
                },
                "local_access": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                },
                "dns": {
                    "type": "string",
                    "default": "host"
                },
                "extra_compose_configs": {
                    "type": "object",
                    "default": {}
                }
            },
            "required": [
                "image"
            ],
            "additionalProperties": false
        },
        "MBContainerMountConf": {
            "title": "MBContainerMountConf",
            "type": "object",
            "properties": {
                "data": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/$defs/MBContainerMountPointConf"
                    },
                    "default": {}
                },
                "log": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/$defs/MBContainerMountPointConf"
                    },
                    "default": {}
                },
                "conf": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/$defs/MBContainerMountPointConf"
                    },
                    "default": {}
                },
                "cache": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/$defs/MBContainerMountPointConf"
                    },
                    "default": {}
                },
                "plugin": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/$defs/MBContainerMountPointConf"
                    },
                    "default": {}
                }
            },
            "required": [],
            "additionalProperties": false
        },
        "MBContainerMountPointConf": {
            "title": "MBContainerMountPointConf",
            "type": "object",
            "properties": {
                "owner": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "source": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                },
                "file": {
                    "type": "boolean",
                    "default": false
                },
                "perm": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null
                }
            },
            "required": [],
            "additionalProperties": false
        },
        "MBContainerMetadataConf": {
            "title": "MBContainerMetadataConf",
            "type": "object",
            "properties": {
                "create_time": {
                    "type": "string"
                },
                "last_update_time": {
                    "type": "string"
                },
                "author": {
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": ""
                }
            },
            "required": []
        }
    }
}